<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/frige_yellow" />
                </shape>
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/shopping_add_itembtn_unclicked" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </layer-list>

    </item>

    <!--버튼 눌렀을 때-->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/frige_green" />
                </shape>
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/shopping_add_itembtn_clicked" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </layer-list>

    </item>

</selector>