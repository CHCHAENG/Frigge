<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="175dp"
        android:gravity="center">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/signupment"></ImageView>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:src="@drawable/enterplace"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"

            ></ImageView>

        <EditText
            android:id="@+id/SignUpEmailEditText"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@null"
            android:backgroundTint="#172F57"
            android:fontFamily="@font/applesdgothicneol"
            android:hint="Email"
            android:textColor="#6f6f6f"
            android:textColorHint="#172F57"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:src="@drawable/enterplace"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"

            ></ImageView>

        <EditText
            android:id="@+id/SignUpPasswordEditText"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:textColor="#6f6f6f"
            android:hint="비밀번호"
            android:fontFamily="@font/applesdgothicneol"
            android:backgroundTint="#172F57"
            android:textSize="15dp"
            android:textColorHint="#172F57"
            android:background="@null"
            android:textStyle="bold"
            android:inputType="textPassword"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:src="@drawable/enterplace"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"

            ></ImageView>

        <EditText
            android:id="@+id/SignUpNicknameEditText"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:background="@null"
            android:backgroundTint="#172F57"
            android:fontFamily="@font/applesdgothicneol"
            android:hint="Nickname"
            android:textColor="#6f6f6f"
            android:textColorHint="#172F57"
            android:textSize="15dp"
            android:textStyle="bold" />


<!--        <ImageView-->
<!--            android:id="@+id/signup"-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="75dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:src="@drawable/signup"-->
<!--            android:layout_marginTop="310dp"-->
<!--            />-->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="310dp"
            android:text="@string/signUp"/>

    </FrameLayout>

</RelativeLayout>